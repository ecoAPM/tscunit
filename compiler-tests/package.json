{
	"name": "compiler-tests",
	"version": "1.0.0",
	"description": "Compiler integration tests for xunit.ts",
	"license": "MIT",
	"private": true,
	"devDependencies": {
		"@rollup/plugin-typescript": "10.0.1",
		"@types/node": "18.11.10",
		"parcel-bundler": "1.12.5",
		"rollup": "3.6.0",
		"ts-loader": "9.4.2",
		"tslib": "2.4.1",
		"typescript": "4.9.3",
		"vite": "3.2.5",
		"webpack": "5.75.0",
		"webpack-cli": "5.0.0",
		"xunit.ts": "file:../core"
	},
	"scripts": {
		"clean": "rm -rf dist",
		"parcel": "parcel build *.ts -d dist/parcel -t node --no-minify --log-level 2 && xunit dist/parcel",
		"rollup": "rollup -c --bundleConfigAsCjs && xunit dist/rollup",
		"typescript": "tsc && xunit dist/typescript",
		"vite": "vite build . && xunit dist/vite",
		"webpack": "webpack && xunit dist/webpack",
	  	"all": "yarn typescript && yarn vite && yarn rollup && yarn parcel && yarn webpack"
	}
}
