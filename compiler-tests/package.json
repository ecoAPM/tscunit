{
	"name": "compiler-tests",
	"version": "1.0.0",
	"description": "Compiler integration tests for xunit.ts",
	"license": "MIT",
	"private": true,
	"engines": {
		"node": ">= 14"
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "11.0.0",
		"@types/node": "18.15.5",
		"assert": "2.0.0",
		"parcel": "2.8.3",
		"process": "0.11.10",
		"rollup": "3.20.1",
		"ts-loader": "9.4.2",
		"tslib": "2.5.0",
		"typescript": "5.0.2",
		"vite": "4.2.1",
		"webpack": "5.76.3",
		"webpack-cli": "5.0.1",
		"xunit.ts": "file:../core",
		"legacy-parcel1": "npm:parcel-bundler@1.12.5",
		"legacy-rollup2": "npm:rollup@2.79.1",
		"legacy-typescript4": "npm:typescript@4.9.5",
		"legacy-vite2": "npm:vite@2.9.15",
		"legacy-vite3": "npm:vite@3.2.5"
	},
	"scripts": {
		"clean": "rm -rf dist",
		"parcel": "parcel build *.ts --dist-dir dist/parcel --no-optimize --no-scope-hoist --log-level error && xunit dist/parcel",
		"rollup": "rollup -c --bundleConfigAsCjs && xunit dist/rollup",
		"typescript": "tsc && xunit dist/typescript",
		"vite": "vite build . && xunit dist/vite",
		"webpack": "webpack && xunit dist/webpack",
		"all": "yarn typescript && yarn vite && yarn rollup && yarn parcel && yarn webpack",
		"legacy-parcel1": "node_modules/legacy-parcel1/bin/cli.js build *.ts -d dist/legacy-parcel1 -t node --no-minify --log-level 2 && xunit dist/legacy-parcel1",
		"legacy-rollup2": "node_modules/legacy-rollup2/dist/bin/rollup -c rollup2.config.js && xunit dist/legacy-rollup2",
		"legacy-typescript4": "node_modules/legacy-typescript4/bin/tsc --outDir dist/legacy-typescript4 && xunit dist/legacy-typescript4",
		"legacy-vite2": "node_modules/legacy-vite2/bin/vite.js build . --outDir dist/legacy-vite2 && xunit dist/legacy-vite2",
		"legacy-vite3": "node_modules/legacy-vite3/bin/vite.js build . --outDir dist/legacy-vite3 && xunit dist/legacy-vite3",
		"legacy-all": "yarn legacy-typescript4 && yarn legacy-vite3 && yarn legacy-vite2 && yarn legacy-rollup2 && yarn legacy-parcel1"
	}
}
