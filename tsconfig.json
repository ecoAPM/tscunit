{
	"compilerOptions": {
		"target": "ES2015",
		"module": "CommonJS",
		"outDir": "./dist/",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"files": [
		"xunit.ts",
		"cli.ts",
		"tsdoc.ts"
	],
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts",
		"TSDoc/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}